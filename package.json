{
  "name": "ya-disk",
  "version": "1.2.0",
  "description": "Yandex Disk API Library",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/RomiC/ya-disk.git"
  },
  "author": "Roman Charugin <i@charugin.ru>",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.23.0",
    "babel-cli": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "codecov": "^3.0.1",
    "eslint": "^4.5.0",
    "follow-redirects": "^1.2.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "nyc": "^11.0.3",
    "sinon": "^6.0.0"
  },
  "bugs": {
    "url": "https://github.com/RomiC/ya-disk/issues"
  },
  "homepage": "https://github.com/RomiC/ya-disk#readme",
  "directories": {
    "test": "tests/*.spec.js"
  },
  "scripts": {
    "example": "babel-node",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "precommit": "lint-staged",
    "prepush": "npm test",
    "test": "ava tests/*.spec.js",
    "test:ci": "nyc npm test",
    "test:watch": "npm test -- --watch",
    "test:debug": "node --inspect node_modules/ava/profile.js",
    "coverage": "nyc report --reporter=lcov > coverage.lcov && codecov --token=c6135c0d-58d0-47ff-8cca-7c38f31f637d"
  },
  "keywords": [
    "yandex",
    "disk",
    "api"
  ],
  "ava": {
    "files": [
      "tests/*.spec.js"
    ],
    "require": [
      "babel-core"
    ],
    "failWithoutAssertions": true
  },
  "lint-staged": {
    "+(examples|lib|tests)/*.js": [
      "npm run lint:fix",
      "git add"
    ]
  }
}
